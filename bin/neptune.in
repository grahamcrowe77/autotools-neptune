#!/usr/bin/env escript
%% -*- erlang -*-
%%! -pa %NEPTUNE_EBINDIR%

-define(COMMAND_NAME, "neptune").

main(CmdLine) ->
    Args = neptune_args:parse(CmdLine),
    case Args of
	#{help := null} ->
	    ok = usage(),
	    halt(0);
	#{version := null} ->
	    ok = version(),
	    halt(0);
	#{} ->
	    ok = usage(),
	    halt(1);
	_ ->
	    %% Place holder for processing the command
	    ok
    end.

usage() ->
    ok = io:format("~s [--version]~n", [?COMMAND_NAME]),
    ok = io:format("see manual page for ~s(1) for more details~n", [?COMMAND_NAME]).

version() ->
    ok = io:format("~s ~s~n", [?COMMAND_NAME, "%PACKAGE_VERSION%"]).
