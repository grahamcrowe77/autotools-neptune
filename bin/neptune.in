#!/usr/bin/env escript
%% -*- erlang -*-
%%! -pa %NEPTUNE_EBINDIR%

-define(COMMAND_NAME, "neptune").

main(["--version"]) ->
    ok = io:format("~s ~s~n", [?COMMAND_NAME, "%PACKAGE_VERSION%"]);
main(_) ->
    usage(),
    halt(1).

usage() ->
    io:format("~s [--version]~n", [?COMMAND_NAME]),
    io:format("see manual page for ~s(1) for more details~n", [?COMMAND_NAME]).
