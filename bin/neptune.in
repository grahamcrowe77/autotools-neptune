#!/usr/bin/env escript
%% -*- erlang -*-
%%! -pa ebin @neptune_ebindir@

-define(COMMAND_NAME, "neptune").

main([Salutation]) ->
    neptune:main(list_to_binary(Salutation));
main([]) ->
    neptune:main();
main(_) ->
    usage().

usage() ->
    io:format("~s [salutation]~n", [?COMMAND_NAME]),
    io:format("see manual page for ~s(1) for more details~n", [?COMMAND_NAME]).

